{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2017",
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "pretty": true,
    "strict": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": ["lib"],
  "include": ["src/**/*", "types/**/*"]
}
